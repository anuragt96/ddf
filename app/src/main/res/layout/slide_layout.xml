<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slider_imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="62dp"
        app:srcCompat="@drawable/f"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/slider_heading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="HEADING"
        android:textColor="@color/colorwhite"
        android:textSize="25sp"
        android:layout_below="@+id/slider_imageview"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/slider_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:textSize="18sp"
        android:textColor="@color/colorTransparentwhite"
        android:textAlignment="center"
        android:text="@string/fast_text"
        android:layout_below="@+id/slider_heading_text"
        android:layout_alignParentStart="true" />
</RelativeLayout>